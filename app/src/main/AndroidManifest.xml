<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.holiday">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ballon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AllBookingActivity"></activity>
        <activity android:name=".MyBookingsActivity" />
        <activity android:name=".PassengerDetails" />
        <activity android:name=".PlaneRequestActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".TrainActivity" />
        <activity android:name=".BusActivity" />
        <activity android:name=".FlightActivity" />
        <activity android:name=".BookingActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TripPlanner" />
        <activity android:name=".AccountsActivity" />
        <activity android:name=".PlansActivity" />
        <activity android:name=".ExploreActivity" />
        <activity android:name=".HomeActivity" />
    </application>

</manifest>